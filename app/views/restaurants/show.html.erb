<h1><%= @restaurant.name %></h1>

<h2>Details</h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
 <%= link_to 'Edit', edit_restaurant_path(@restaurant)%>
 <%= link_to 'Back', restaurants_path %>

 <h2>Reviews</h2>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      <%= review.rating %>
      <%= link_to 'Delete', restaurant_review_path(review), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
